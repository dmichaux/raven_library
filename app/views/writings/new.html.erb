<h2 class='page-heading'>Add to <%= @collection.name %></h2>

<%= form_with model: @writing, url: collection_writings_url(@collection) do |f| %>
  <% f.hidden_field :collection_id %>

  <%= f.label :author_first, class: 'form-label' %>
  <%= f.text_field :author_first, class: 'form-control form-control-sm w-50' %>

  <%= f.label :author_middle, class: 'form-label' %>
  <%= f.text_field :author_middle, class: 'form-control form-control-sm w-50' %>

  <%= f.label :author_last, class: 'form-label' %>
  <%= f.text_field :author_last, class: 'form-control form-control-sm w-50' %>

  <%= f.label :name, class: 'form-label' %>
  <%= f.text_field :name, class: 'form-control form-control-sm w-50' %>

  <%= f.label :content, class: 'form-label' %>
  <%= f.rich_text_area :content %>

  <%= f.submit class: 'mt-3 btn btn-sm btn-secondary' %>
<% end %>
